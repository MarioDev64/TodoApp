{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "components/**/*",
    ".expo/types/**/*",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/expo/node_modules",
    "node_modules/expo/babel.config.js",
    "node_modules/expo/metro.config.js",
    "node_modules/expo/jest.config.js"
  ]
}
